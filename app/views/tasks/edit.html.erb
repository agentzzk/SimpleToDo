<div class = "container">
<div class="task_nav">
  <%= link_to "Back", task_path, class: "btn btn-default" %>
</div>
<h2>Edit<small><br>Last updated <%= time_ago_in_words(@editTask.updated_at)%> ago</small></h2>
<hr/>
<% if @editTask.errors.any?  %>
  <div class = "container-fluid text-left">
    <div class = "alert alert-danger">
      <h5>Please correct the following errors: </h5>
      <ul>
        <% @editTask.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  </div>
<% end %>

<div class = "container-fluid well">
<%= form_for @editTask do |f| %>
  <%= f.label  :title, class: "lead" %><br>
  <%= f.text_field  :title %><br>
  
  <%= f.label  :details, class: "lead" %><br>
  <%= f.text_area  :details, rows:10 %>
  
  <%= f.submit  'Update', class: "btn btn-primary" %>
<% end %>
</div>
</div>